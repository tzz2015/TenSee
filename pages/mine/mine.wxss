/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  width: 100%;
  height: 300rpx;
 border-radius: 100% 100% 100% 100% / 0% 0% 30% 30%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  border-width: 2rpx;
  background-color: black;
}

.userinfo-nickname {
  color: #666;
}

.edit_icon {
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.input_box {
  margin-top: 30rpx;
  margin-left: 130rpx;
  margin-right: 130rpx;
  box-align: center;
  padding: 10rpx;
  border: 1rpx solid gainsboro;
}
.phone_input_box {
  margin-top: 30rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
  box-align: center;
  padding: 10rpx;
  border: 1rpx solid gainsboro;
}

.input_holder {
  font-size: 28rpx;
  color: #999;
}

.cell_group{
  width: 100%;
  margin-top: 40rpx;
}
.cell_icon{
  width: 40rpx;
  height: 40rpx;
}
